<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'user', media: 'all', 'data-turbolinks-track': 'reload' %>
<body>
<nav class="nav">
    <%= link_to "Add New Post", new_user_post_path(@user.id) %>
    <%= link_to "Home", root_path %>
    <%= link_to "Back", :back %>
    <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete } %>
</nav>
<%= render @user %>
<div id="bio">
 <p class="container">Bio: <%= @user.bio %></p>
 </div>
<br>
<%='No posts for this user' if (@user.posts.empty?) %>
<% @user.recent_posts.each do |post| %>
  <a href ="<%= user_post_path(@user, post)%>">
  <%= render post %>
<% end %>
<div class="button-container">
    <button><a href="<%= user_posts_path(@user) %>">See all posts</a></button>
</div>
</body>
